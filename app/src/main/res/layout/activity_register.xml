<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBg"
    tools:context=".Controllers.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:weightSum="2">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textColor="#707070"
            android:textSize="30sp">
        </TextView>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/design">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="4"
                android:background="@drawable/layout_bg">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/username"
                    android:background="@null"
                    android:padding="20dp"
                    android:ems="10"
                    android:inputType="textEmailAddress|text"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="6dp">
                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="-15dp"
                    android:background="@color/colorView"
                    android:layout_gravity="center">
                </View>

                <EditText
                    android:id="@+id/correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/email"
                    android:background="@null"
                    android:padding="20dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/ic_at"
                    android:drawablePadding="6dp">
                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="-15dp"
                    android:background="@color/colorView"
                    android:layout_gravity="center">
                </View>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_marginRight="70dp"
                    android:background="@color/colorWhite">

                    <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorWhite"
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_lock_alt"
                        android:drawablePadding="6dp"
                        android:ems="10"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:padding="20dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="-15dp"
                    android:background="@color/colorView"
                    android:layout_gravity="center">
                </View>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_marginRight="70dp"
                    android:background="@color/colorWhite">

                    <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorWhite"
                        android:id="@+id/repeatpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/cofirmpassword"
                        android:background="@null"
                        android:padding="20dp"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ic_lock_alt"
                        android:drawablePadding="6dp"/>
                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="35dp"
                android:text="@string/alrdy_have"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:textStyle="italic">

            </TextView>

            <ImageView
                android:id="@+id/iniciar"
                android:layout_width="140dp"
                android:layout_height="114dp"
                android:layout_gravity="right"
                android:onClick="login"
                android:src="@drawable/log_btn">

            </ImageView>

        </LinearLayout>

        <ImageView
            android:id="@+id/crearcuenta"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="92dp"
            android:src="@drawable/btn1"
            android:background="@android:color/transparent"
            android:layout_marginStart="300dp">
        </ImageView>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/base"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY">
    </ImageView>

</RelativeLayout>